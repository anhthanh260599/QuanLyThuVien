@model QuanLyThuVienCNPMNC.Models.BOITHUONG

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />

<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal bg_dt w-50">
        <h2 class="text-center text-uppercase text-bold">Tạo phiếu bồi thường</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-12">Mã độc giả </label>
            <div class="col-md-12">
                @Html.DropDownList("MaHV", (List<SelectListItem>)ViewBag.MaHV, htmlAttributes: new { @class = "form-control list-searchable" })
                @*@Html.DropDownList("MaHV", null, "--Chọn độc giả-- ", htmlAttributes: new { @class = "form-control" })*@
                @Html.ValidationMessageFor(model => model.MaHV, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-12">Mã sách </label>
            <div class="col-md-12">
                @Html.DropDownList("MaSach", (List<SelectListItem>)ViewBag.MaSach, htmlAttributes: new { @class = "form-control list-searchable" })

                @*@Html.DropDownList("MaSach", null, "--Chọn mã sách--", htmlAttributes: new { @class = "form-control" })*@
                @Html.ValidationMessageFor(model => model.MaSach, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-12">Số tiền phải trả </label>
            <div class="col-md-12">
                @Html.EditorFor(model => model.GiaTien, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = 0 ,@required="required"} })
                @Html.ValidationMessageFor(model => model.GiaTien, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-12">Tình trạng bồi thường </label>
            <div class="col-md-12">
                @Html.DropDownList("TinhTrang", ViewBag.tinhtrangthe as SelectList, "--- Chọn tình trạng ---", new { @class = "form-control search-selectlist" })
                @Html.ValidationMessageFor(model => model.TinhTrang, "", new { @class = "text-danger" })
            </div>
        </div>

        @*<div class="form-group">
                <div class="col-md-offset-12 col-md-12 text-center">
                    <input type="submit" value="Create" class="btn btn-default mr-2" />
                    @Html.ActionLink("Back to List", "Index")
                </div>
            </div>*@
        <div class="form-group">
            <div class="col-md-offset-2 col-md-12 text-center">
                <input type="submit" value="Thêm mới" class="btn mr-2" style="background-color: #210cae; color:#fff;" /> 
                @Html.ActionLink("Trở lại", "Index", null, new { @class = "btn btn-outline-dark" })
            </div>
        </div>

    </div>
}

<script type="text/javascript">
    $(function () {
        $('.list-searchable').chosen();
    })
</script>