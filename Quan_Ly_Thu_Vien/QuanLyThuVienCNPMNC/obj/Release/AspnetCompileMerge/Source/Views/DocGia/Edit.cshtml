@model QuanLyThuVienCNPMNC.Models.HOIVIEN

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal bg_dt w-50">
        <h2 class="text-center text-uppercase text-bold">chỉnh sửa thẻ độc giả</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-12">Mã độc giả</label>
            <div class="col-md-12">

                @*@Html.EditorFor(model => model.MaHV, new { htmlAttributes = new { @class = "form-control", @placeholder = "VD: HVS01", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.MaHV, "", new { @class = "text-danger" })*@
                @Html.EditorFor(model => model.MaHV, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.MaHV, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-12">Tên độc giả</label>
            <div class="col-md-12">

                @Html.EditorFor(model => model.TenHV, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.TenHV, "", new { @class = "text-danger" })
            </div>
        </div>




        <div class="form-group">
            <label class="control-label col-md-12">Số điện thoại độc giả</label>
            <div class="col-md-12">

                @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control", @pattern = "[0-9]{10,11}", @title = "Vui lòng nhập đúng số điện thoại", @required="required" } })
                @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-12">Ngày lập thẻ</label>
            <div class="col-md-12">

                @Html.HiddenFor(model => model.NgayLapThe, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Convert.ToDateTime(Model.NgayLapThe).ToString("dd/MM/yyyy")
                @Html.ValidationMessageFor(model => model.NgayLapThe, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-12">Ngày hết hạn</label>
            <div class="col-md-12">

                <input class="form-control" id="ngayhethan" name="ngayhethan" type="date" onchange=""  />
                <span class="field-validation-valid text-danger" data-valmsg-for="ngayhethan" data-valmsg-replace="true"></span>
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-md-12">Trạng thái thẻ</label>
            <div class="col-md-12">

                @Html.DropDownListFor(model => model.TrangThai, ViewBag.TrangThai as SelectList, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TrangThai, "", new { @class = "text-danger" })
            </div>
        </div>

        @*  <div class="form-group">
                @Html.LabelFor(model => model.TinhTrang, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.TinhTrang, new SelectList(new[] { "Còn hạn" }), new { @class = "form-control" })

                    @Html.EditorFor(model => model.TinhTrang, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TinhTrang, "", new { @class = "text-danger" })
                </div>
            </div>*@

        <div class="form-group">
            @Html.HiddenFor(model => model.TinhTrang, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.HiddenFor(model => model.TinhTrang, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.HiddenFor(model => model.DangMuon, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.HiddenFor(model => model.DangMuon, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-12 col-md-12 text-center">
                <input type="submit" value="Lưu" class="btn mr-2" style="background-color: #210cae; color:#fff;" />
                @Html.ActionLink("Trở lại", "Index", null, new { @class = "btn btn-outline-secondary" })
            </div>
        </div>
    </div>
}


@if (ViewBag.Message != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>
}
@if (TempData["Message"] != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@TempData["Message"]");
            };
    </script>
}