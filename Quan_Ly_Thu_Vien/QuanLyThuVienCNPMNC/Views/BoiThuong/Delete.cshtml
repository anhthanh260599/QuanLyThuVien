@model QuanLyThuVienCNPMNC.Models.BOITHUONG

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="bg_dt">
    <p class="alert alert-danger mt-3" role="alert"><strong>Bạn có muốn xóa phiếu mượn này?</strong></p>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Số tiền phải trả
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GiaTien)
        </dd>

        <dt>
            Tình trạng bồi thường
        </dt>

        <dd>
            @if (Model.TinhTrang == 1)
            {
                <span>Chưa đóng phạt</span>
            }
            else
            {
                <span>Đã đóng phạt</span>
            }
        </dd>

        <dt>
            Tên hội viên
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HOIVIEN.TenHV)
        </dd>

        <dt>
            Mã đầu sách
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SACH.MaDS)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @*<div class="form-actions no-color text-center">
                <input type="submit" value="Delete" class="btn btn-default mr-2" /> |
                @Html.ActionLink("Back to List", "Index")
            </div>*@

        <div class="form-actions no-color text-center">
            @*<input type="submit" value="Xóa" class="btn btn-danger" id="btn-xoa"  />*@
            <button class="btn btn-danger mr-2" id="btn-xoa" type="button">Xóa</button>

            @Html.ActionLink("Trở lại", "Index", null, new { @class = "btn btn-outline-dark" })
        </div>
    }
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.getElementById("btn-xoa").addEventListener("click", function () {
        Swal.fire({
            title: "Bạn thật sự muốn xóa?",
            text: "Thông tin này sẽ không khôi phục lại được, vui lòng kiểm tra thật kỹ",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Xóa",
            cancelButtonText: "Hủy bỏ"
        }).then((result) => {
            if (result.isConfirmed) {
                // Nếu người dùng xác nhận xóa, submit form để thực hiện hành động xóa
                document.forms[0].submit();
            }
        });
    });
</script>
