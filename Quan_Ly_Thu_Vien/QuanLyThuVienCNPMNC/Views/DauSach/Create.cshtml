@model QuanLyThuVienCNPMNC.Models.DAUSACH

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />

<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18/dist/sweetalert2.min.css" />
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18/dist/sweetalert2.min.js"></script>


<script>
    $(document).ready(function () {
        $('.list-nxb').select2({

        })
    });
</script>


<script type="text/javascript">
    function validateData() {

        if ($("#TenSach").val() == "") {
            Swal.fire({
                icon: 'warning',
                title: 'Vui lòng nhập tên sách'
            });
            return false;
        } else if ($("#Theloai").val() == "") {
            Swal.fire({
                icon: 'warning',
                title: 'Vui lòng nhập thể loại'
            });
            return false;
        } else if ($("#NgayXuatBan").val() == "") {
            Swal.fire({
                icon: 'warning',
                title: 'Vui lòng chọn ngày xuất bản'
            });
            return false;
        } else {
            return true;
        }
    }
</script>




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal bg_dt w-50 " id="form-create">
        <h2 class="text-center text-uppercase text-bold">Thêm đầu sách mới</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-10">Mã đầu sách</label>
            <div class="col-md-10 text-bold text-red">
                @ViewBag.newkey
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-10">Tên đầu sách</label>
            <div class="col-md-12">
                @Html.EditorFor(model => model.TenSach, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenSach, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-10">Thể loại đầu sách</label>
            <div class="col-md-12">
                @Html.EditorFor(model => model.Theloai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Theloai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-10">Nhà xuất bản</label>
            <div class="col-md-12">
                @Html.DropDownListFor(model => model.NXB, ViewBag.ListNXB as SelectList, new { @class = "form-control list-nxb" })

                @Html.ValidationMessageFor(model => model.NXB, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-10">Ngày xuất bản</label>
            <div class="col-md-12">

                @Html.EditorFor(model => model.NgayXuatBan, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                @Html.ValidationMessageFor(model => model.NgayXuatBan, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-10">Ghi chú thêm</label>
            <div class="col-md-12">
                @Html.EditorFor(model => model.GhiChu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GhiChu, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control", @style="display:none" } })
                @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-12 text-center">
                <input type="submit" value="Thêm mới" class="btn" style="background-color: #210cae; color:#fff;" onclick="return validateData()" /> |
                @Html.ActionLink("Trở lại", "Index", null, new { @class = "btn btn-outline-dark" })
            </div>
        </div>

    </div>
}
<script type="text/javascript">
    $(function () {
        $('#NXB').chosen();
    })
</script>


