@model QuanLyThuVienCNPMNC.Models.SACH

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />

<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal bg_dt w-50">
    <h2 class="text-center text-uppercase text-bold">Thêm sách mới</h2>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
   @* <div class="form-group">
        <label class="control-label col-md-12">Mã sách</label>
        <div class="col-md-12 text-bold text-red">
            @ViewBag.newkey
        </div>
    </div>*@

    <div class="form-group">
        @*@Html.LabelFor(model => model.TinhTrang, htmlAttributes: new { @class = "control-label col-md-2" })*@
        <div class="col-md-10">

            @*@Html.DropDownListFor(model => model.TinhTrang, ViewBag.TinhTrang as SelectList, new { @class = "form-control list-searchable" })*@
            @Html.EditorFor(model => model.TinhTrang, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", Value = "1", @style = "display:none" } })
            @Html.ValidationMessageFor(model => model.TinhTrang, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-12">Tên sách </label>
        <div class="col-md-12">
            @Html.DropDownListFor(model => model.MaDS, ViewBag.ListMaDauSach as SelectList, new { @class = "form-control list-searchable" })
            @*@Html.EditorFor(model => model.MaDS, new { htmlAttributes = new { @class = "form-control" } })*@
            @Html.ValidationMessageFor(model => model.MaDS, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-12">Số lượng sách cần thêm</label>
        <div class="col-md-12">
            <input class="form-control" type="number" min="1" name="soluongsach" id="soluongsach" placeholder="Nhập số lượng sách" required/>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-12 text-center">
            <input type="submit" value="Thêm mới" class="btn mr-2" style="background-color: #210cae; color:#fff;" />
            @Html.ActionLink("Trở lại", "Index", null, new { @class = "btn btn-outline-dark" })

        </div>
    </div>
</div>
}

<script type="text/javascript">
    $(function () {
        $('.list-searchable').chosen();
    })
</script>


@if (ViewBag.Message != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>
}
@if (TempData["Message"] != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@TempData["Message"]");
            };
    </script>
}