            </div>
            <div class="icon">
                <i class="fa-solid fa-pen"></i>
            </div>
            <a href="@Url.Action("Index","BaoCao")" class="small-box-footer">Xem thêm <i class="fas fa-arrow-circle-right"></i></a>
