@model Quan_Ly_Thu_Vien.Models.HOIVIEN

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    <link rel="stylesheet" href="~/Content/MyLayout/css/style.css">

    <!-- nhúng icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">

    <link href="/Content/MyLayout/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <link href=" ~/Content/MyLayout/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/Content/MyLayout/css/sb-admin-2.min.css" rel="stylesheet">

    <!-- Custom styles for this page -->
    <link href="~/Content/MyLayout/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}

@section scripts{
    <script>
        $(function () {
            $('#AlertBox').removeClass('hide');
            $('#AlertBox').delay(2000).slideUp(500);
        });

    </script>
}

<main>
    <div class="page-header ml-5">
        <div>
            <h1>Thêm hội viên</h1>
            <small>Trang chủ / Thêm hội viên</small>
        </div>
    </div>

    @if (TempData["AlertMessage"] != null)
    {
        <div id="AlertBox" class="alert @TempData["AlertType"] hide ml-5 mt-3 page-content" role="alert">
            @TempData["AlertMessage"]
        </div>
    }

    <!-- Thông tin mượn sách -->
    <div class="page-content ml-5">
        <a class="link-button" href="Index">Thông tin hội viên</a>
    </div>
    <div class="page-content borrow-book-infomation">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <fieldset style="border:1px solid #000; padding:1px 12px 16px 8px">
                <legend class="h2">Thông Tin Hội Viên</legend>


                <div class="borrow-book-infomation-left">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="borrow-book-item" style="width:550px">
                        <div class="col-md-3">
                            <p class="h4 mt-2 mb-2" style="width:200px">Mã Hội Viên</p>
                        </div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.MaHV, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MaHV, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="borrow-book-item" style="width:550px">
                        <div class="col-md-3">
                            <p class="h4 mt-2 mb-2" style="width:200px">Tên Hội Viên</p>
                        </div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.TenHV, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TenHV, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="borrow-book-item" style="width:550px">
                        <div class="col-md-3">
                            <p class="h4 mt-2 mb-2" style="width:200px">Số Điện Thoại</p>
                        </div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="borrow-book-item" style="width:550px">
                        <div class="col-md-3">
                            <p class="h4 mt-2 mb-2" style="width:200px">Ngày Lập Thẻ</p>
                        </div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.NgayLapThe, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NgayLapThe, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="borrow-book-item" style="width:550px">
                        <div class="col-md-3">
                            <p class="h4 mt-2 mb-2" style="width:300px">Tình TRạng</p>
                        </div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.TinhTrang, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TinhTrang, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="borrow-book-item" style="width:550px">
                        <div class="col-md-3">
                            <p class="h4 mt-2 mb-2" style="width:300px">Số Sách Đang Mượn</p>
                        </div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.DangMuon, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DangMuon, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @*<div class="borrow-book-item" style="margin-right: 8px;">
                            <label for="">Từ ngày</label>
                            <input type="date">
                        </div>*@

                </div>
            </fieldset>

            <div class="page-content" style="margin-left: 135px">
                <button class="btn btn-update-book btn-success" style="height: 40px; margin: 0px auto; background-color: #22BAA0 " id="open-modal" alert="">Đồng ý</button>
            </div>
            
        }
    </div>
</main>
<script src="~/Content/MyLayout/js/app.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

